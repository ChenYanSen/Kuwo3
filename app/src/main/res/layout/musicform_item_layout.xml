<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="3"
        android:padding="7dp"
        android:stretchColumns="1">

        <TableRow android:gravity="center">

            <ImageView
                android:id="@+id/itemMusicForm_photo_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/musicformimg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemMusicForm_name_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="我的歌单"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/itemMusicForm_num_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="0首歌曲"
                    android:textSize="12dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/itemMusicForm_btn"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:layout_margin="10dp"
                android:background="@drawable/moreo_btn_selector"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/moreo" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/expend"
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:background="#bbbbbb"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/musicform_expend_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/edit" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="编辑" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/musicform_expend_delete"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/delete" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="删除" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>