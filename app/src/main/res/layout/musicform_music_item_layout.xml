<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="3"
        android:padding="5dp"
        android:stretchColumns="1">

        <TableRow android:gravity="center">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="+"
                android:textSize="14dp"
                android:paddingBottom="2dp"
                android:background="@drawable/btn_check" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemMusic_name_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="我的歌单"
                    android:textSize="@dimen/textsize_18"
                    android:textColor="@color/textcolor_black"/>

                <TextView
                    android:id="@+id/itemMusic_songer_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="周杰伦"
                    android:textSize="@dimen/textsize_12" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/itemMusic_btn"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/moreo_btn_selector"
                android:scaleType="fitXY"
                android:src="@drawable/moreo" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#55bbbbbb"/>

    <LinearLayout
        android:id="@+id/expend"
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:background="#bbbbbb"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/music_expend_add"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/add" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="添加" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/music_expend_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/info" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="歌曲信息" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/music_expend_delete"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/delete" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="删除" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>