<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/music_sort_basic_color"
    android:orientation="vertical">

    <include layout="@layout/musicform_toolbar" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:collapseColumns="3"
        android:padding="5dp"
        android:stretchColumns="2">

        <TableRow android:gravity="center">

            <ImageView
                android:id="@+id/imgAlbumPage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/album" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAlbumMusicPage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="专辑："
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtAlbumMusicPageDetial"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:text="专辑信息："
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAlbumName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="绅士"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtAlbumDetial"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:text="华语 海蝶音乐 2015-06-05"
                    android:textSize="12dp" />

            </LinearLayout>
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listViewAlbumSong"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp" />
</LinearLayout>
    <include layout="@layout/main_playbar"/>
    </RelativeLayout>