<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 确定组件未按下的状态  -->
    <item android:state_pressed="false">
        <!-- 创建一个sharp标签 ，设置组件的显示样式-->
        <shape>
            <!-- 设置该组件为实心颜色填充 -->
            <solid android:color="#771c86ee"/>
            <!-- 设置组件的描边 -->
            <stroke android:width="0.5dp" android:color="#771c86ee"/>
            <!-- 设置圆边角 -->
            <corners android:radius="5dp"/>
        </shape>
    </item>
    
    <!-- 确定组件按下的状态  -->
    <item android:state_pressed="true">
        <!-- 创建一个sharp标签 ，设置组件的显示样式-->
        <shape>
            <!-- 设置该组件为实心颜色填充 -->
            <solid android:color="#7787ceff"/>
            <!-- 设置组件的描边 -->
            <stroke android:width="0.5dp" android:color="#7787ceff"/>
            <!-- 设置圆边角 -->
            <corners android:radius="5dp"/>
        </shape>
    </item>

</selector>
